<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>DKPerms</artifactId>
    <groupId>net.pretronic.dkperms</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>dkperms-minecraft</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${plugin.compiler}</version>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mcnative</groupId>
        <artifactId>mcnative-buildtool-maven</artifactId>
        <version>${dependency.mcnative.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>McNative-Build</goal>
              <goal>McNative-Package</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mcnative-loader-version>1.1.9.140-SNAPSHOT</mcnative-loader-version>
          <resource-loader-version>${dependency.pretronic.libraries}</resource-loader-version>
          <manifest>
            <name>DKPerms</name>
            <id>edda82b3-344b-418a-a935-e507a1f9a9fc</id>
            <category>Network Management</category>
            <version>${project.version}</version>
            <main>net.pretronic.dkperms.minecraft.DKPermsPlugin</main>
            <website>https://pretronic.net</website>
            <author>Davide Wietlisbach</author>
            <messageModule>DKPerms</messageModule>
          </manifest>
          <loader>
            <version>${project.version}</version>
            <versionUrl>https://mirror.pretronic.net/v1/{plugin.id}/versions/latest?plain=true&amp;qualifier={qualifier}</versionUrl>
            <downloadUrl>https://mirror.pretronic.net/v1/{plugin.id}/versions/{version.build}/download</downloadUrl>
          </loader>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.mcnative</groupId>
      <artifactId>mcnative-build</artifactId>
      <version>1.1.15.147-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>mcnative-common</artifactId>
          <groupId>org.mcnative</groupId>
        </exclusion>
        <exclusion>
          <artifactId>pretroniclibraries-resourceloader</artifactId>
          <groupId>net.pretronic.libraries</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bungeecord-api</artifactId>
          <groupId>net.md-5</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bukkit</artifactId>
          <groupId>org.bukkit</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

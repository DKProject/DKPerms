<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.pretronic.dkperms</groupId>
    <artifactId>DKPerms</artifactId>
    <packaging>pom</packaging>
    <version>1.2.7.127-SNAPSHOT</version>

    <modules>
        <module>dkperms-api</module>
        <module>dkperms-common</module>
        <module>dkperms-minecraft</module>
        <module>dkperms-api-minecraft</module>
        <module>dkperms-legacy</module>
    </modules>

    <distributionManagement>
        <repository>
            <id>pretronic</id>
            <url>https://repository.pretronic.net/repository/pretronic/</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>pretronic</id>
            <url>https://repository.pretronic.net/repository/pretronic/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>pretronic</id>
            <url>https://repository.pretronic.net/repository/pretronic/</url>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <!-- Project settings -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- Dependency version -->
        <dependency.pretronic.libraries>1.2.19.157-SNAPSHOT</dependency.pretronic.libraries>
        <dependency.mcnative.version>1.6.4.351-SNAPSHOT</dependency.mcnative.version>
        <dependency.pretronic.databasequery>1.2.42.69-SNAPSHOT</dependency.pretronic.databasequery>

        <dependency.hikaricp>3.4.1</dependency.hikaricp>
        <dependency.mariadb.driver>2.4.1</dependency.mariadb.driver>

        <!-- Maven plugins -->
        <plugin.compiler>3.8.1</plugin.compiler>
        <plugin.source>3.2.1</plugin.source>

        <plugin.maven.shade>3.2.2</plugin.maven.shade>
        <plugin.maven.deploy>3.0.0-M1</plugin.maven.deploy>

        <!-- Test dependencies -->
        <test.junit.jupiter>5.5.2</test.junit.jupiter>
    </properties>

</project>
